@page
@using EmpSalaryData;
@using DepartmentData;
@using System.Collections.Generic;
@model CincyPay.Pages.DetailsModel
@{
    //List<EmpSalary> FinalFilteredList = (List<EmpSalary>)ViewData["EmpSalary"];
    List<Department> DepartmentList = (List<Department>)ViewData["depList"];
    Dictionary<String, int> d = new Dictionary<string, int>();

}
<style>
    #GFG {
        text-decoration: none;
    }

    .left {
        float: left;
        width: 50%;
        overflow-y: scroll;
        max-height: 575px;
        border: 4px solid gainsboro;
        border-radius: 21px;
        padding: 11px;
        margin-top: 25px;
    }

    .right {
        float: right;
        width: 50%;
    }

    .top {
        height: 50%;
        float: top;
        margin-left: 45px;
        margin-top: 20px;
    }

    .bottom {
        height: 50%;
        float: bottom;
    }

    ::-webkit-scrollbar {
        width: 10px;
    }

    /* Track */
    ::-webkit-scrollbar-track {
        box-shadow: inset 0 0 1px grey;
        border-radius: 10px;
    }

    /* Handle */
    ::-webkit-scrollbar-thumb {
        background: #0074D9;
        border-radius: 10px;
    }

        /* Handle on hover */
        ::-webkit-scrollbar-thumb:hover {
            background: gainsboro;
        }
        .parent
{
    cursor: pointer;
    position: relative;
    z-index: 1;
}

.parent:focus
{
    outline: none;
}

.slide
{
    position: absolute;
    top: 0;
    z-index: -1;
    -webkit-transition: top 1s;
    -moz-transition: top 1s;
}

.parent:focus + .slide
{
    top: 50px;
    -webkit-transition: top 1s;
}
</style>
<script type="text/javascript">
    function showHideRow(row) {
        $("#" + row).toggle();
    }
</script>
<div style="overflow-y:hidden;">
    <div class="left">

        </tr>
        @{
            foreach (Department empSalary in DepartmentList)
            {
                if (d.ContainsKey(empSalary.DepartmentDepartment))
                {

                }
                else
                {
                    <a href="/JobDetails?inputDepName=@empSalary.DepartmentCodes&stringName=@empSalary.DepartmentDepartment">
                        <div class="card" style="margin-top:6px">
                            <div  class="card-body">
                            
                                @empSalary.DepartmentDepartment
                           
                            </div>
                        
                        </div>
                    </a>
                   
                    d.Add(empSalary.DepartmentDepartment, 1);
                }


            }

        }

    </div>
    <div class="right">
        <div class="top">

            <h1>Job Category!</h1>
            <h6>Find from the list of categories that suit and you and get to know employees and their job details working in the specific job fields. </h6>
        </div>
        <div class="bottom">
            <img width="100%" src="/Images/departments.jpg" />
        </div>
    </div>
</div>
